{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false, // required
  "editor.formatOnType": false, // required
  "editor.formatOnSave": true, // optional
  "editor.formatOnSaveMode": "file", // required to format on save
  "files.autoSave": "onFocusChange",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#bd6af7",
    "activityBar.background": "#bd6af7",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#f8c986",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#bd6af7",
    "statusBar.background": "#a739f5",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#bd6af7",
    "statusBarItem.remoteBackground": "#a739f5",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#a739f5",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#a739f599",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#a739f5", // optional but recommended
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#8A33FD",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ]
}
